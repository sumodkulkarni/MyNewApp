<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativelayout_main"
    android:background="@color/black">

    <VideoView
        android:id="@+id/video_view_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:id="@+id/relativelayout_video_minimized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:elevation="5dp">

        <VideoView
            android:id="@+id/video_view_minimized"
            android:layout_width="250dp"
            android:layout_height="141dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/button_replay"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_replay_white_24dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout_skip"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:orientation="horizontal"
        android:background="@color/black_button_background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_skip"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/button_skip_ad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_skip_next_white_24dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cta_textview"
        android:layout_alignTop="@+id/relativelayout_video_minimized"
        android:layout_toEndOf="@+id/relativelayout_video_minimized"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:elevation="5dp"
        android:text="Book Tickets!"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:background="#B71C1C" />

    <!--<RelativeLayout
        android:id="@+id/relativelayout_progress"
